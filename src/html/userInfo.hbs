<div class="page-user">
    <div class="page-user-inner">
        {{> side-nav}}
        <div class="content user-info-block">
            <div class="inner">
                <h3 class="title">个人信息</h3>
                <form action="">
                    <div class="form-block">
                        <input type="text" placeholder="昵称">
                        <span class="icon-icon-user left-icon"></span>
                        <a href="javaScript:;" class="right-link">修改</a>
                    </div>
                    <div class="form-block">
                        <input type="text" placeholder="手机号">
                        <span class="icon-login-phone left-icon"></span>
                        <a href="javaScript:;" class="right-link">修改</a>
                    </div>
                    <div class="form-block">
                        <input type="text" placeholder="邮箱">
                        <span class="icon-email left-icon"></span>
                        <a href="javaScript:;" class="right-link">修改</a>
                    </div>
                    <div class="form-block">
                        <div class="label">收货地址（获取教材）</div>
                    </div>
                    <div class="form-block">
                        <select name="" id="province">
                            <!--<option value="">请选择</option>-->
                            <option value="重庆" selected>重庆</option>
                        </select>
                        <select name="" id="city">
                            <!--<option value="">请选择</option>-->
                            <option value="市辖区" selected>市辖区</option>
                        </select>
                        <select class="last" name="" id="town">
                            <!--<option value="">请选择</option>-->
                            <option value="沙坪坝区" selected>沙坪坝区</option>
                        </select>
                    </div>
                    {{!-- <div class="form-block">
                      <input type="text" placeholder="邮箱">
                      <span class="icon-icon-locked left-icon"></span>
                      <a href="javaScript:;" class="right-link">修改</a>
                    </div> --}}
                    <div class="form-block no-icon">
                        <input type="text" placeholder="详细地址（如境外地址请详细填写于此）">
                    </div>

                    <button class="wx-butn">提 交</button>
                </form>
            </div>
        </div>
    </div>
</div>